<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/carImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/carImg_default">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/carName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="차량명"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운전 가능"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#4488FF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lookupInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="이용정보 조회"
                android:layout_marginLeft="5dp"/>>

            <Button
                android:id="@+id/startTheCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4488FF"
                android:text="시동걸기"/>>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>