<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/carImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/carimage_default"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/carName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/carName_default"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isAvailable_default"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#4488FF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lookupInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lookupInfo_default"
                android:layout_marginLeft="5dp"/>

            <Button
                android:id="@+id/startTheCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:backgroundTint="#4488FF"
                android:text="@string/startTheCar_default"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>